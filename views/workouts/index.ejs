<%- include('../partials/header') %>

<section>
    <h2>Legs</h2>
    <table id="legs">
       
        <tbody>
            <% workouts.forEach(function(w) { %>
                <% if (w.bodyPart === 'Legs') { %>
                    <tr>
                        <td><%= w.title %></td>
                        <td><a href="/workouts/<%= w._id %>">DETAILS</a></td>
                    </tr>
                <% } %>
            <% }); %>
        </tbody>
    </table>
</section>

